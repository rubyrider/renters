<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card center">
        <div class="card-content pink-text">
          <p>Client Id: <%= @client.id %></p>
          <span class="card-title"><%= @client.full_name %></span>
          <p>Phone Number: <%= @client.phone %></p>
          <p>Address: <%= @client.address %></p>
          <a href="<%= url_for(controller: 'dashboard/property/clients', action: 'index') %>" class="btn btn-floating btn-large pink pulse"><i class="material-icons">menu</i></a>
          <a href="<%= url_for(controller: 'dashboard/property/clients', action: 'edit', id: @client) %>" class="btn btn-floating btn-large pink pulse"><i class="material-icons">edit</i></a>
        </div>
        <div class="card-action center">
          <a href="<%= url_for(controller: 'dashboard/property/clients', action: 'index') %>" class="btn btn-large pink">My Properties</a>
          <a href="<%= url_for(controller: 'dashboard/property/clients', action: 'index') %>" class="btn btn-large pink">My Clients</a>
        </div>
      </div>
    </div>
  </div>
  <br />
</div>
