<div class="row">
  <div class="col s12 m12">
    <div class="card center">
      <div class="card-content pink-text">
        <span class="card-title"><%= @user.full_name %></span>
        <p>Email: <%= @user.email %></p>
        <p>Number of Properties: <%= @user.properties.count %></p>
        <p>Expected Number of Maximum Properties: <%= @user.number_of_property || 0 %></p>
        <a href="<%= url_for(controller: 'dashboard/properties', action: 'index') %>" class="btn btn-floating btn-large pink pulse"><i class="material-icons">menu</i></a>
        <a href="<%= url_for(controller: 'dashboard/users', action: 'edit', id: @user) %>" class="btn btn-floating btn-large pink pulse"><i class="material-icons">edit</i></a>
      </div>
      <div class="card-action center">
        <a href="<%= url_for(controller: 'dashboard/properties', action: 'index') %>" class="btn btn-large pink">My Properties</a>
        <a href="<%= url_for(controller: 'dashboard/properties', action: 'index') %>" class="btn btn-large pink">My Clients</a>
        <a href="<%= url_for(controller: 'dashboard/properties', action: 'index') %>" class="btn btn-large pink">My Payment Collections</a>
      </div>
    </div>
  </div>
</div>
<br />